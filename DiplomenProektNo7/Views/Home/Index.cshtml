        body {
            background: linear-gradient(to right, #f5a5b8, #c4d4e8);
        }

        .border-fancy {
            position: relative;
            display: inline-block;
        }

            .border-fancy:before, .border-fancy:after {
                content: "";
                position: absolute;
                z-index: -1;
                transition: all 0.3s ease;
            }

            .border-fancy:before {
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border: 2px solid #e7e7e7;
            }

            .border-fancy:after {
                top: 10px;
                left: 10px;
                width: calc(100% - 20px);
                height: calc(100% - 20px);
                border: 2px solid #e7e7e7;
            }

            .border-fancy:hover:before {
                transform: translate(-5px, -5px);
                box-shadow: 5px 5px 0 0 dodgerblue;
            }

            .border-fancy:hover:after {
                transform: translate(5px, 5px);
                box-shadow: -5px -5px 0 0 dodgerblue;
            }

        .btn-shop-now {
            background-color: dodgerblue;
            border: none;
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: #FFFFFF;
            transition: all 0.3s ease;
        }

            .btn-shop-now:hover {
                background-color: #1C1C1C;
                cursor: pointer;
            }

        .rating {
            unicode-bidi: bidi-override;
            direction: rtl;
            text-align: center;
            font-size: 36px;
            display: inline-block;
        }

        .star {
            display: inline-block;
            cursor: pointer;
            color: #ccc;
        }

            .star:hover,
            .star.selected {
                color: #ff0;
            }
    </style>
    <script>
        const stars = document.querySelectorAll('.star');
        let rating;

        stars.forEach(function (star, index) {
            star.addEventListener('click', function () {
                rating = index + 1;
                localStorage.setItem('rating', rating);
                renderStars();
            });
        });

        function renderStars() {
            const ratingValue = parseInt(localStorage.getItem('rating'));

            stars.forEach(function (star, index) {
                if (index < ratingValue) {
                    star.classList.add('selected');
                } else {
                    star.classList.remove('selected');
                }
            });
        }

        renderStars();
    </script>
